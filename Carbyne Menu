# Carbyne Menu # 

on load:
	set {_CarbyneGear.menu} to true
	
command /cg:
	trigger:
		wait 4 tick 
		open chest with 5 row named "&b&lCarbine Store" to player
		format slot 0 of player with black stained glass pane with name "&0." to be unstealable
		format slot 1 of player with black stained glass pane with name "&0." to be unstealable
		format slot 2 of player with black stained glass pane with name "&0." to be unstealable
		format slot 3 of player with black stained glass pane with name "&0." to be unstealable
		format slot 4 of player with eye of ender named "&e&lArmour Tokens" with lore "&7You have||&7&o{ArmorToken::balance::%{_player}%} Armor Tokens" to be unstealable
		format slot 5 of player with black stained glass pane with name "&0." to be unstealable
		format slot 6 of player with black stained glass pane with name "&0." to be unstealable
		format slot 7 of player with black stained glass pane with name "&0." to be unstealable
